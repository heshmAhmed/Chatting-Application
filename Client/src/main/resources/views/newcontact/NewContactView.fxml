<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="322.0" prefWidth="485.0" style="-fx-background-color: #21325E;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.iti.jets.client.controllers.NewContactController">
   <content>
      <VBox fx:id="vbox" style="-fx-padding: 20; -fx-background-color: #21325E;">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" text="Add new contact" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Candara" size="36.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER">
               <children>
                  <FontIcon iconColor="WHITE" iconLiteral="far-plus-square" iconSize="32" onMouseClicked="#handlePlusIcon" />
                  <TextField fx:id="phoneNumberField" alignment="CENTER" onAction="#handlePhoneNumberField" prefColumnCount="20" promptText="Enter phone number">
                     <font>
                        <Font name="Candara" size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="15.0" right="15.0" />
                     </HBox.margin>
                  </TextField>
                  <MFXButton onAction="#handleSendButton" style="-fx-background-color: #3E497A;" text="Send" textFill="WHITE" />
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
