<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.iti.jets.server.presentation.controller.SidebarController">
   <top>
      <Pane style="-fx-background-color: #6B519E;" BorderPane.alignment="CENTER">
         <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="36.0" layoutY="38.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../css/iconsPng/icons8_Waxing_Crescent_64px_1.png" />
            </image>
         </ImageView>
         <Label layoutX="128.0" layoutY="39.0" text="DashBoard" textFill="#fff7f7">
            <font>
               <Font name="Josefin Sans Thin" size="48.0" />
            </font>
         </Label>
      </Pane>
   </top>
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="staticsButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleStaticsButton" prefHeight="89.0" prefWidth="194.0" stylesheets="@../css/styling.css" text="OverView" textFill="#6b519ec2">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="usersListButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleUsersListButton" prefHeight="75.0" prefWidth="194.0" stylesheets="@../css/styling.css" text="Users" textFill="#6b519e">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="announcementButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleAnnouncement" prefHeight="77.0" prefWidth="194.0" stylesheets="@../css/styling.css" text="Announcement" textFill="#6b519e">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <VBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Button fx:id="onButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleOn" prefHeight="27.0" prefWidth="194.0" stylesheets="@../css/styling.css" text="ON" textFill="#1ff000">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <graphic>
                        <FontIcon iconLiteral="fas-toggle-on" wrappingWidth="31.25" />
                     </graphic>
                  </Button>
                  <Button fx:id="offButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleOff" prefHeight="46.0" prefWidth="194.0" stylesheets="@../css/styling.css" text="OFF" textFill="#fc0000">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <graphic>
                        <FontIcon iconLiteral="fas-toggle-off" wrappingWidth="27.25" />
                     </graphic>
                  </Button>
                  <Button fx:id="logoutButton" alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleLogout" prefHeight="27.0" prefWidth="194.0" stylesheets="@../css/styling.css" text="LogOut" textFill="#6b519e">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <graphic>
                        <FontIcon iconLiteral="far-hand-point-left" wrappingWidth="23.0" />
                     </graphic>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
</BorderPane>
