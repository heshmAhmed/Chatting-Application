<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" stylesheets="@../../styles/main-style.css,@../../styles/chat-view-style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.iti.jets.client.presentation.controllers.ChatController">
   <left>
      <VBox id="profile-chatlist" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #1A1A40;" BorderPane.alignment="CENTER">
         <children>
            <HBox id="profile">
               <children>
                  <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Circle id="userPhoto" fx:id="userPhotoCircle" fill="DODGERBLUE" radius="40.0" stroke="BLACK" strokeType="INSIDE" styleClass="text-field">
                           <VBox.margin>
                              <Insets left="20.0" top="10.0" />
                           </VBox.margin>
                        </Circle>
                        <Label fx:id="userNameLabel" text="myName" textFill="WHITE">
                           <VBox.margin>
                              <Insets bottom="5.0" left="25.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
                  <VBox prefHeight="122.0" prefWidth="15.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                        <FontIcon fx:id="profileIcon" iconColor="WHITE" iconLiteral="fas-user" iconSize="20" onMouseClicked="#handleProfileIcon">
                           <VBox.margin>
                              <Insets right="5.0" top="5.0" />
                           </VBox.margin>
                        </FontIcon>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox id="addNewContact">
               <children>
                  <TextField fx:id="searchTextField" prefHeight="26.0" prefWidth="156.0" promptText="🔍  Search" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="5.0" top="3.0" />
               </padding>
            </HBox>
            <ScrollPane id="contactList" fitToHeight="true" fitToWidth="true" style="-fx-background-color: #1A1A40;" VBox.vgrow="ALWAYS">
               <content>
                  <VBox id="contactVBox" fx:id="contactListVBox" style="-fx-background-color: #1A1A40;" />
               </content>
            </ScrollPane>
            <FontIcon iconColor="WHITE" iconLiteral="fas-user-plus" iconSize="20" onMouseClicked="#handleAddNewContactIcon">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </FontIcon>
         </children>
      </VBox>
   </left>
</BorderPane>
