<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_RIGHT" style="-fx-background-color: #1A1A40;" stylesheets="@../../../styles/main-style.css" type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ListView fx:id="contactsList" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: transparent;" />
      <HBox alignment="BOTTOM_RIGHT">
         <children>
            <Button fx:id="addButton" minWidth="60.0" mnemonicParsing="false" onAction="#handleAddButton" style="-fx-background-color: #bf4080;" stylesheets="@../../../styles/main-style.css" text="add" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButton" style="-fx-background-color: #bf4080;" stylesheets="@../../../styles/main-style.css" text="cancel" textFill="WHITE">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" right="5.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</fx:root>
