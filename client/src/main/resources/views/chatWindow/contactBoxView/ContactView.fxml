<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<fx:root fx:id="contactHBox" styleClass="body" stylesheets="@../../../styles/contact-box-style.css" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane prefHeight="46.0" prefWidth="39.0">
         <children>
            <Circle fx:id="contactPhotoCircle" fill="DODGERBLUE" layoutX="20.0" layoutY="23.0" nodeOrientation="LEFT_TO_RIGHT" radius="15.0" stroke="WHITE" strokeType="INSIDE" strokeWidth="3.0" />
            <Circle fx:id="statusIcon" fill="#ffaf1f" layoutX="27.0" layoutY="32.0" radius="5.0" stroke="#ececec" strokeType="INSIDE" strokeWidth="3.0" />
         </children>
      </AnchorPane>
      <VBox prefHeight="40.0" prefWidth="138.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="conatctNameLabel" text="contactName" textFill="WHITE">
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="contactMessageLabel" text="message" textFill="#fcfbfb">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="3.0" top="3.0" />
   </padding>
</fx:root>
